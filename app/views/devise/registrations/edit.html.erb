<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
<div class = "row">
  <div class = "container">
    <div class = "col s2">
    </div>

    <div class = "col s8">
      <h2>Edit <%= resource_name.to_s.humanize %> Page</h2>
       <br>
       <h6>このページを編集する際、現在使用しているパスワードが必須となります。</h6>
       <br>
       <ul class="collapsible">
         <li>
           <div class="collapsible-header"><i class="material-icons">email</i>Email</div>
            <div class="collapsible-body">
             <div class="field">
             <%= f.label :email %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
             </div>
           </div>
         </li>

         <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
         <% end %>

         <li>
           <div class="collapsible-header"><i class="material-icons">lock</i>Password</div>
             <div class="collapsible-body">
               <div class="field">
                 <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                 <%= f.password_field :password, autocomplete: "off" %>
                 <% if @minimum_password_length %>
                 <br/>
                 <em><%= @minimum_password_length %> characters minimum</em>
                 <% end %>
               </div>
            </div>
         </li>
         <li>
           <div class="collapsible-header"><i class="material-icons">people</i>Nickname</div>
             <div class="collapsible-body">
               <div class="label"><%= f.label :nickname %><br/>
                 <%= f.text_field :nickname %>
               </div>
             </div>
         </li>
         <li>
            <div class="collapsible-header"><i class="material-icons">attach_file</i>Image</div>
              <div class="collapsible-body"><span>
                <div class="field">
                   <%= f.file_field :avatar %>
                </div>
              </div>
         </li>
         <li>
           <div class="collapsible-header"><i class="material-icons">people</i>Introduction</div>
           <div class="collapsible-body">
             <div class="label"><%= f.label :field %><br/>
               <%= f.text_field :field %>
             </div>
           </div>
         </li>
         <li>
           <div class="collapsible-header"><i class="material-icons">event_note</i>Birth</div>
              <div class="collapsible-body">
                 <div class="label">
                   <%= f.label :birth %><br />
                   <%= f.text_field :birth, class:  'datepicker'  %>
                   <script>
                       document.addEventListener('DOMContentLoaded', function() {
                           var elems = document.querySelectorAll('.datepicker');
                           var instances = M.Datepicker.init(elems, options);
                       });

                       // Or with jQuery

                       $(document).ready(function(){
                           $('.datepicker').datepicker();
                       });
                   </script>
                 </div>
             </div>
        </li>
        <li>
          <div class="collapsible-header"><i class="material-icons">beenhere</i>Interest</div>
            <div class="collapsible-body"><span>
              <div class="chips chips-placeholder">
                    <%= f.label :tag_list, "field" %><br>
                    <%= f.text_field :tag_list,value: current_user.tag_list.join(',') , class: 'custom-class' %>
                  <script>
                      document.addEventListener('DOMContentLoaded', function() {
                        var elems = document.querySelectorAll('.chips');
                          var instances = M.Chips.init(elems, options);
                      });

                      $('.chips').chips();
                      $('.chips-placeholder').chips({
                          placeholder: 'Enter a tag',
                          secondaryPlaceholder: '+Tag',
                      });
                  </script>
                </div>
            </span></div>
        </li>


      <li class="active">
         <div class="collapsible-header"><i class="material-icons">lock_open</i>Current Password (変更には現在のパスワードが必須となります。)</div>
            <div class="collapsible-body"><span>
               <div class="field">
                 <%= f.label :current_password %> <i>(変更には現在のパスワードが必須となります。)</i><br/>
                 <%= f.password_field :current_password, autocomplete: "off" %>
               </div>
            </span>
          </div>
      </ul>


      <div class="actions">
         <%= f.submit "Update" %>
     </div>
<% end %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</div>
