<div class="parallax-background-top2">
<div class="contents row">
  <div class = "col s6">
  </div>

  <div class = "col s5">
    <div class="card blue-grey darken-1 transport">
      <div class="card-content white-text">
        <div class="center">
        <h5 class="white-text">ログイン画面</h5>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="card-content ">
            <ul class="collection">
              <li class="collection-item field">
                <%= f.label :email %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </li>
              </li>
              <li class="collection-item field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </li>
              <% if devise_mapping.rememberable? -%>
                <li class="collection-item field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </li>
              <% end -%>
              </ul>
          </div>
          <div class="center">
              <div class="actions waves-effect waves-light btn-large teal accent-2">
                <%= f.submit "Log in" %>
              </div>
              <div class="actions waves-effect waves-light btn-large teal accent-2">
                <%= render "devise/shared/links" %>
              </div>
          </div>
        <% end %>
      </div>

  </div>


  <div class = "col s1">

  </div>
</div>
</div>