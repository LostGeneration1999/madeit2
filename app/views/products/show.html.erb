<div class = "row">
  <div class = "container">
    <div class = "col s2">
    </div>
        <div class="col s8">
          <div class="card">
            <div class="card-image">
              <img src="<%= @product.image %>">
            </div>

        <ul class="collection">
          <li class="collection-item">
              <span class="black-text">
                  <%= link_to "#{@product.user.nickname}",  user_path(@product.user.id) %>
              </span>
          </li>
          <li class="collection-item">
              <%= @product.content %>
          </li>
          <li class="collection-item">
              <a href="<%= @product.url1 %>">Link1</a>
              <br>
              <a href="<%= @product.url2 %>">Link2</a>
          </li>
          <li class="collection-item">
            <% if current_user %>
              <%= form_for [@product, @comments] do |f| %>
                <div class="row">
                  <div class="col s11">
                    <div class="row">
                      <div class="input-field col s12">
                        <i class="material-icons prefix">textsms</i>
                        <%= f.text_field :content %>
                        <!--<label for="autocomplete-input">Autocomplete</label>-->
                  <%= button_tag tyoe: "submit", class: "waves-effect waves-light btn" do %>
                  投稿する<i class="fa fa-arrow-left"></i>
                          <%= f.submit %>
              <% end %>
              <% end %>
            <% end %>
            </div>
            </div>
            </div>
            </div>
          </li>
          <li class="collection-item">
            <div class="comments">
              <h4>＜コメント一覧＞</h4>
              <% @product.comments.each do |comment| %>
                <p>
                  <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
                  <%= comment.content %>
                  <% if comment.user_id == current_user.id %>
                    <%= link_to product_comment_path(@product,comment), method: :delete , class: "waves-effect waves-light btn" do %>
                      <i class="fa fa-arrow-left"></i>
                      <span>コメント削除</span>
                    <% end %>
                  <% end %>
                </p>
              <% end %>
            </div>
        </li>
          <li class="collection-item">
             <% if user_signed_in? && current_user. id == @product.user_id %>
               <%= link_to edit_product_path(@product), class: "waves-effect waves-light btn" do %>
                 <i class="fa fa-arrow-left"></i>
                 <span>編集</span>
               <% end %>

               <%= link_to @product, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect waves-light btn" do %>
                 <i class="fa fa-arrow-left"></i>
                 <span>削除</span>
               <% end %>
             <% end %>
          </li>
        </ul>
       </div>

        <%= link_to products_path , class: "waves-effect waves-light btn" do %>
             <i class="fa fa-arrow-right"></i>
             <span>戻る</span>
        <% end %>
    </div>
  </div>

  <div class="container">
    <!-- ここからフォーム -->

  </div>
</div>

