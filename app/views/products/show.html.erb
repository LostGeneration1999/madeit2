<div class = "row">
  <div class = "container">
    <div class = "col s2">
    </div>
        <div class="col s8">
          <div class="card">
            <div class="card-image">
              <img src="<%= @product.image %>">
            </div>

        <ul class="collection">
          <li class="collection-item">
              <span class="black-text">
                  <%= link_to "#{@product.user.nickname}",  user_path(@product.user.id) %>
              </span>
          </li>
          <li class="collection-item">
              <%= @product.content %>
          </li>
          <li class="collection-item">
              <a href="<%= @product.url1 %>">Link1</a>
              <br>
              <a href="<%= @product.url2 %>">Link2</a>
          </li>
          <li class="collection-item">
             <%= link_to @product, class: "waves-effect waves-light btn" do %>
               <i class="fa fa-arrow-left"></i>
               <span>COMMENT</span>
             <% end %>
             <% if user_signed_in? && current_user. id == @product.user_id %>
               <%= link_to edit_product_path(@product), class: "waves-effect waves-light btn" do %>
                 <i class="fa fa-arrow-left"></i>
                 <span>編集</span>
               <% end %>

               <%= link_to @product, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect waves-light btn" do %>
                 <i class="fa fa-arrow-left"></i>
                 <span>削除</span>
               <% end %>
             <% end %>
          </li>
        </ul>
       </div>


  <div class="container">

    <% if current_user %>
      <%= form_tag("/products/#{@product.id}/comments", method: :post) do %>
        <div class="row">
          <div class="col s8">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">textsms</i>
                <input type="text" id="autocomplete-input" class="autocomplete">
                <label for="autocomplete-input">コメントする</label>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

    <%= link_to products_path , class: "waves-effect waves-light btn" do %>
      <i class="fa fa-arrow-right"></i>
      <span>戻る</span>
    <% end %>
  </div>
</div>
