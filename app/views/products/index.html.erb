<!-- Page Layout here -->
<div class="row">

<div class="col s12 m8 l9">
      <div class="row">
        <% @products.each do |product| %>
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="<%= product.image.url %>">
              <span class="card-title">
                <%= product.name %>
              </span>
            </div>
            <div class = "card-content">
              <div class="col s4">
                <img src="<%= product.user.avatar %>" alt="" class="circle responsive-img">
              </div>
              <div class="col s5 right-align">
                <span class="black-text">
                  <%= link_to "#{product.user.nickname}",  user_path(product.user.id) %>
                </span>
              </div>
            </div>
            <div class="card-content">
              <%= product.description %>
            </div>
            <div>
            <% product.tag_list.each do |tag| %>
            <span class="label label-primary"><%= tag %></span>
            <% end %>
            </div>
            <%= link_to product, class: "waves-effect waves-light btn" do %>
              <i class="fa fa-arrow-left"></i>
             <span>SHOW</span>
             <% end %>
            <% if user_signed_in? && current_user. id == product.user_id %>
            <%= link_to edit_product_path(product), class: "waves-effect waves-light btn" do %>
              <i class="fa fa-arrow-left"></i>
             <span>編集</span>
             <% end %>

             <%= link_to product, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect waves-light btn" do %>
              <i class="fa fa-arrow-left"></i>
             <span>削除</span>
             <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
   </div>
  <div class="col s12 m9">
    <%= paginate(@products) %>
  </div>
</div>


  </div>

